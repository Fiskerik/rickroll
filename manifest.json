{
  "manifest_version": 3,
  "name": "Vertical Rickroll",
  "version": "1.2",
  "description": "Hide meme lyrics as acrostics in your text.",
  "permissions": ["sidePanel", "activeTab", "scripting", "storage", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to open Vertical Rickroll"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}